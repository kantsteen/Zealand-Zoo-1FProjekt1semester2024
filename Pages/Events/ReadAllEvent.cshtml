@page
@model Zealand_Zoo_1FProjekt1semester2024.Pages.Events.ReadEventModel
@{
    ViewData["Title"] = "ReadAllEvent";

}
<h2>Kommende Events [Admin]</h2>

<p>
    <a asp-page="CreateEvent">Create New Event</a>
</p>

<form class="mb-3 mb-lg-0 me-lg-3" role="search">
    <div class="input-group" style="max-width: 300px; margin: left;">
        <input type="search" class="form-control form-control-dark text-bg-dark" asp-for="FilterCriteria" placeholder="Search..." aria-label="Search">
        <button type="submit" class="btn" style="background-color: deeppink; color: white;">Search</button>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Navn
            </th>
            <th>
                Beskrivelse
            </th>
            <th>
                Antalsbegrænsning
            </th>
            <th>
                Åbningstid
            </th>
            <th>
                Lukketid
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
            <tr>
                <td>
                    @item.Value.Id
                </td>
                <td>
                    @item.Value.Name
                </td>
                <td>
                    @item.Value.Description
                </td>
                <td>
                    @item.Value.Limit
                </td>
                <td>
                    @item.Value.OpeningTime
                </td>
                <td>
                    @item.Value.ClosingTime
                </td>
                <td>
                    <img src="~/Images/@item.Value.ImageName" width="220" height="140">
                </td>
               
                 <td>
                        <p>
                        <a asp-page="UpdateEvent" asp-route-id="@item.Key">Rediger</a> |
                        <a asp-page="DeleteEvent" asp-route-id="@item.Key">Slet</a>
                    </p>
                </td>
                
            </tr>
        }
    </tbody>

</table>
