        <label asp-for="@Model.Event.Name" class="control-label"></label>
        <input asp-for="@Model.Event.Name" class="form-control" />
        <span asp-validation-for="@Model.Event.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Event.Description" class="control-label"></label>
        <input asp-for="@Model.Event.Description" class="form-control" />
        <span asp-validation-for="@Model.Event.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Event.Limit" class="control-label"></label>
        <input asp-for="@Model.Event.Limit" class="form-control" />
        <span asp-validation-for="@Model.Event.Limit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Event.OpeningTime" class="control-label"></label>
        <input asp-for="@Model.Event.OpeningTime" class="form-control" />
        <span asp-validation-for="@Model.Event.OpeningTime" class="text-danger"></span>
    <div class="form-group">
        <label asp-for="@Model.Event.ClosingTime" class="control-label"></label>
        <input asp-for="@Model.Event.ClosingTime" class="form-control" />
        <span asp-validation-for="@Model.Event.ClosingTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Event.ImageName" class="control-label"></label>
        <input asp-for="@Model.Event.ImageName" class="form-control" />
        <span asp-validation-for="@Model.Event.ImageName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>